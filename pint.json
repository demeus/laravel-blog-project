{
    "preset": "psr12",
    "exclude": [
        "storage",
        "bootstrap/cache"
    ],
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        },
        "ordered_imports": {
            "sort_algorithm": "length"
        },
        "ordered_traits": true,
        "return_type_declaration": {
            "space_before": "one"
        },
        "yoda_style": true,
        "use_arrow_functions": true
    }
}
